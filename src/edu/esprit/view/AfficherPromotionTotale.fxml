<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="edu.esprit.controller.AfficherPromotionTotaleController">
  <children>
      <Pane prefHeight="498.0" prefWidth="602.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" />
            <Button fx:id="updatebuttonid" layoutX="111.0" layoutY="325.0" mnemonicParsing="false" onAction="#updatebtn" style="-fx-background-color: #D4A29C;" text="Modifier">
               <font>
                  <Font name="Microsoft YaHei Light" size="14.0" />
               </font>
            </Button>
            <Button fx:id="deletebuttonid" layoutX="192.0" layoutY="325.0" mnemonicParsing="false" onAction="#deletebtn" style="-fx-background-color: #D4A29C;" text="Supprimer">
               <font>
                  <Font name="Microsoft YaHei Light" size="14.0" />
               </font></Button>
            <Button fx:id="addevid" layoutX="330.0" layoutY="325.0" mnemonicParsing="false" onAction="#addbtn" style="-fx-background-color: #D4A29C;" text="Ajouter un code promo">
               <font>
                  <Font name="Microsoft YaHei Light" size="14.0" />
               </font></Button>
            <TableView fx:id="personsTable" layoutX="151.0" layoutY="26.0" prefHeight="288.0" prefWidth="301.0" style="-fx-background-color: white;">
              <columns>
                <TableColumn fx:id="NameColonne" prefWidth="75.0" style="-fx-text-fill: #BDD1C5;" text="Nom code" />
                  <TableColumn fx:id="ValueColonne" prefWidth="75.0" text="Valeur code" />
                  <TableColumn fx:id="DatedColonne" prefWidth="75.0" text="Date debut" />
                  <TableColumn fx:id="DatefColonne" prefWidth="75.0" text="Date fin" />
              </columns>
            </TableView>
            <Pane prefHeight="497.0" prefWidth="93.0" style="-fx-background-color: #D19C97;">
               <children>
                  <ImageView fitHeight="90.0" fitWidth="73.0" layoutX="6.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/ogo.png" />
                     </image>
                  </ImageView>
                  <Hyperlink fx:id="dashboard" layoutY="110.0" text="Dashboard" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="product" layoutX="1.0" layoutY="156.0" text="Product" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="category" layoutX="4.0" layoutY="195.0" text="Catégorie" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="accueil" layoutX="20.0" layoutY="451.0" text="Back" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="reclamation" layoutX="1.0" layoutY="249.0" text="Réclamation" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="evenement" layoutX="5.0" layoutY="351.0" text="Evénement" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
                  <Hyperlink fx:id="promotion" layoutX="6.0" layoutY="302.0" text="Promotion" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Hyperlink>
               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</AnchorPane>
