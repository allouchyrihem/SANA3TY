<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controller.AfficherEventsController">
     <children>
      <Pane prefHeight="400.0" prefWidth="602.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" />
            <Button fx:id="updatebuttonid" layoutX="111.0" layoutY="325.0" mnemonicParsing="false" onAction="#updatebtn" style="-fx-background-color: #D4A29C;" text="Modifier">
               <font>
                  <Font name="Microsoft YaHei Light" size="14.0" />
               </font>
            </Button>
            <Button fx:id="deletebuttonid" layoutX="192.0" layoutY="325.0" mnemonicParsing="false" onAction="#deletebtn" style="-fx-background-color: #D4A29C;" text="Supprimer">
               <font>
                  <Font name="Microsoft YaHei Light" size="14.0" />
               </font></Button>
            <Button fx:id="addevid" layoutX="330.0" layoutY="325.0" mnemonicParsing="false" onAction="#addbtn" style="-fx-background-color: #D4A29C;" text="Ajouter un événement">
               <font>
                  <Font name="Microsoft YaHei Light" size="14.0" />
               </font></Button>
            <TableView fx:id="personsTable" layoutX="111.0" layoutY="30.0" prefHeight="288.0" prefWidth="380.0" style="-fx-background-color: white;">
              <columns>
                <TableColumn fx:id="NameColonne" prefWidth="75.0" style="-fx-text-fill: #BDD1C5;" text="Nom " />
                  <TableColumn fx:id="AdresseColonne" prefWidth="75.0" text="Adresse" />
                  <TableColumn fx:id="DateColonne" prefWidth="75.0" text="Date" />
                  <TableColumn fx:id="DescriptionColonne" prefWidth="75.0" text="Description" />
                  <TableColumn fx:id="LinkColonne" prefWidth="75.0" text="Lien " />
              </columns>
            </TableView>
         </children>
      </Pane>
   </children>
    
    
    
    
</AnchorPane>
